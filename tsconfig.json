{
  "include": [
    "./src/*"
  ],
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "es2015",
      "esnext",
      "ES2015"
    ],
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
